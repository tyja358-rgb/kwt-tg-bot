adBtn.onclick = async ()=>{
    const watched = await showAd();
    if(!watched) return;

    point.adsViewed++;
    document.getElementById('ads-count').textContent = point.adsViewed;

    if(point.adsViewed >= point.adsRequired){
        modal.style.display='none';
        activePoint = null;
        movePlayerToPoint(point, ()=>collectPoint(point,"через рекламу"));
    }
};
