from flask import Flask, request
import os
import requests
from dotenv import load_dotenv
import openai

# Загружаем .env
load_dotenv("/home/ArgoAetherium/Aetherium/.env")

# Токены
TELEGRAM_TOKEN = os.getenv("TELEGRAM_BOT_TOKEN")
OPENAI_KEY = os.getenv("OPENAI_API_KEY")
openai.api_key = OPENAI_KEY

print("Telegram token loaded:",
bool(TELEGRAM_TOKEN))
print("OpenAI key loaded:",
bool(OPENAI_KEY))

BASE_URL = f"https://api.telegram.org/bot{TELEGRAM_TOKEN}"

# Создаем Flask приложение
app = Flask(__name__)

@app.route("/", methods=["GET"])
def index():
    return "Welcome to your Aetherium Web App!"

# Функция для получения ответа от GPT
def get_gpt_response(prompt):
    response = openai.ChatCompletion.create(
        model="gpt-4-mini",
        messages=[{"role": "user", "content": prompt}],
        temperature=0.7
    )
    return response.choices[0].message['content']

# Маршрут webhook
@app.route("/webhook", methods=["POST"])
def webhook():
    update = request.get_json()

    if not update:
        return "no update", 400

    message = update.get("message")
    if message:
        chat_id = message["chat"]["id"]
        text = message.get("text", "")

        # Ответ через GPT
        reply_text = get_gpt_response(text)
        send_message(chat_id, reply_text)

    return "ok", 200

# Функция отправки сообщений в Telegram
def send_message(chat_id, text):
    url = f"{BASE_URL}/sendMessage"
    payload = {"chat_id": chat_id, "text": text}
    requests.post(url, json=payload)

# Локальный запуск (только для теста)
