// ===== Расчёт мощности точки =====
function calculatePower(distMeters){
    if(distMeters < 100) return 0; // до 100 м — мощность 0
    const hundreds = Math.floor((distMeters - 1)/100); // 100-199 -> 1 сотня, 200-299 -> 2 сотни
    return hundreds * 4; // 4 ват за каждую сотню после первой
}

// ===== Рассчёт рекламы =====
function calculateAds(distMeters){
    return Math.floor(distMeters / 100) + 1; // 0-100 м -> 1 реклама, 101-200 -> 2, 201-300 -> 3
}
