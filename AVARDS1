    /* Кнопка мультяшная лапка */
    .paw-btn {
        width: 120px;
        height: 120px;
        background-image: url('https://i.imgur.com/3qQfKxF.png'); /* Замени на свою лапку PNG */
        background-size: cover;
        background-position: center;
        border: none;
        cursor: pointer;
        border-radius: 50%;
        box-shadow: 0 8px #b3865c, 0 0 20px rgba(0,0,0,0.2);
        transition: transform 0.1s, box-shadow 0.1s;
        display: inline-block;
