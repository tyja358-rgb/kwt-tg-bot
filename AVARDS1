from telegram import InlineKeyboardButton, InlineKeyboardMarkup, Update, WebAppInfo
from telegram.ext import ApplicationBuilder, CommandHandler, ContextTypes

# Команда /start
async def start(update: Update, context: ContextTypes.DEFAULT_TYPE):
    keyboard = [
        [
            InlineKeyboardButton(
                "Открыть Moldova Animal",
                web_app=WebAppInfo(url="https://tyja358-rgb.github.io/miniapp/")
            )
        ]
    ]
    reply_markup = InlineKeyboardMarkup(keyboard)
    await update.message.reply_text(
        "Добро пожаловать! Открывайте Moldova Animal через кнопку ниже:",
        reply_markup=reply_markup
    )

# Инициализация бота
def main():
    app = ApplicationBuilder().token("8541224917:AAHPIVj9CCp1cQrXlMSB1Fs7rB3XvpntGMw").build()

    app.add_handler(CommandHandler("start", start))

    print("Бот запущен...")
    app.run_polling()

if __name__ == "__main__":
    main()
