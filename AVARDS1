<h2>Голосование за самое красивое домашнее животное</h2>

<!-- Кнопки лапок -->
<button class="paw-btn" id="paw1" style="background-image: url('png-clipart-love-and-cat-prints-cartoon-cat-cat-footprint-thumbnail.png');"></button>
<button class="paw-btn" id="paw2" style="background-image: url('°•♡Pata de gato♡•°.jpeg');"></button>

<!-- Кнопка голосовать -->
<button id="voteBtn">Голосовать</button>

<script>
    const tg = window.Telegram.WebApp;
    tg.expand();

    function addPhoto(pawId) {
        tg.sendData(JSON.stringify({ action: "add_photo", paw: pawId }));
    }

    function vote() {
        tg.sendData(JSON.stringify({ action: "vote" }));
    }

    // Привязка кнопок к функциям
    document.getElementById("paw1").onclick = () => addPhoto("paw1");
    document.getElementById("paw2").onclick = () => addPhoto("paw2");
    document.getElementById("voteBtn").onclick = vote;
</script>

