<!-- Кнопка Голосовать -->
<button class="paw-btn" id="vote">
  <svg width="120" height="120" viewBox="0 0 64 64">
    <circle cx="20" cy="20" r="6" fill="#FFD700"/>
    <circle cx="44" cy="20" r="6" fill="#FFD700"/>
