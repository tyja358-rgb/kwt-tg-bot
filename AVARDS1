<script>
const tg = window.Telegram.WebApp;
tg.expand();

setTimeout(() => {
    const splash = document.getElementById("splash");
    splash.style.animation = "fadeOut 1s forwards";
    setTimeout(() => {
        splash.style.display = "none";
        document.getElementById("main-content").style.display = "block";
    }, 1000);
}, 4000);

// ======= ЛЕНТА ФОТО (ГОЛОСОВАНИЕ) =======
const voteFeed = document.getElementById("vote-feed");

// КРЕСТИК ПРИВЯЗЫВАЕМ ОДИН РАЗ
document.getElementById("vote-close").onclick = closeVoteFeed;

function openVoteFeed(){
    // очищаем ТОЛЬКО фото, но НЕ удаляем крестик
    const existingClose = document.getElementById("vote-close");
    voteFeed.innerHTML = "";
    voteFeed.appendChild(existingClose);

    fetch("/photos")
    .then(res => res.json())
    .then(photos => {
        if (!photos || photos.length === 0) {
            const emptyMsg = document.createElement("div");
            emptyMsg.textContent = "Пока нет фото для голосования";
            emptyMsg.style.fontSize = "20px";
            emptyMsg.style.marginTop = "50px";
            voteFeed.appendChild(emptyMsg);
        } else {
            photos.reverse().forEach(p=>{
                const img = document.createElement("img");
                img.src = p.startsWith("uploads/") ? p : "uploads/"+p;
                img.className="vote-photo";
                voteFeed.appendChild(img);
            });
        }

        voteFeed.style.display="flex";
        document.getElementById("main-content").style.display="none";
    })
    .catch(err => {
        console.error(err);
        const emptyMsg = document.createElement("div");
        emptyMsg.textContent = "Не удалось загрузить фото";
        emptyMsg.style.fontSize = "20px";
        emptyMsg.style.marginTop = "50px";
        voteFeed.appendChild(emptyMsg);

        voteFeed.style.display="flex";
        document.getElementById("main-content").style.display="none";
    });
}

function closeVoteFeed(){
    voteFeed.style.display="none";
    document.getElementById("main-content").style.display="block";
}

document.getElementById("vote").onclick = openVoteFeed;
</script>

