<body>

<h2>Голосование за самое красивое домашнее животное</h2>

<!-- Кнопка мультяшная лапка -->
<button class="paw-btn" id="addPhotoBtn"></button>

<!-- Кнопка голосовать -->
<button id="voteBtn">Голосовать</button>

<script>
    const tg = window.Telegram.WebApp;
    tg.expand();

    function addPhoto() {
        tg.sendData(JSON.stringify({ action: "add_photo" }));
    }

    function vote() {
        tg.sendData(JSON.stringify({ action: "vote" }));
    }

    // Привязываем функции к кнопкам
    document.getElementById("addPhotoBtn").onclick = addPhoto;
    document.getElementById("voteBtn").onclick = vote;
</script>

