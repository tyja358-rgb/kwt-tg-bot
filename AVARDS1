<script>
    const tg = window.Telegram.WebApp;
    tg.expand();

    function addPhoto() {
        tg.sendData(JSON.stringify({ action: "add_photo" }));
    }

    function vote() {
        tg.sendData(JSON.stringify({ action: "vote" }));
    }

    document.getElementById("addPhoto").onclick = addPhoto;
    document.getElementById("vote").onclick = vote;
</script>

