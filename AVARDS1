#splash-img {
    position:fixed;
    inset:0;
    width:100vw;
    height:100vh;
    object-fit:cover;
    z-index:9999;
    pointer-events: none; /* ğŸ”¥ Ğ’ĞĞ–ĞĞ */
}




function initMap() {

    // â— ĞµÑĞ»Ğ¸ ĞºĞ°Ñ€Ñ‚Ğ° ÑƒĞ¶Ğµ ÑĞ¾Ğ·Ğ´Ğ°Ğ½Ğ° â€” ĞĞ• ÑĞ¾Ğ·Ğ´Ğ°Ñ‘Ğ¼ Ğ·Ğ°Ğ½Ğ¾Ğ²Ğ¾
    if (map) return;

    map = L.map('map', {
        zoomControl: true,
        attributionControl: true
    }).setView([playerLat, playerLng], 15);

    L.tileLayer(
        'https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png',
        {
            maxZoom: 19,
            crossOrigin: true
        }
    ).addTo(map);

    userMarker = L.marker([playerLat, playerLng])
        .addTo(map)
        .bindPopup("Ğ’Ñ‹ Ğ·Ğ´ĞµÑÑŒ");

    generatePoints();
    loadStations();

    setTimeout(() => {
        map.invalidateSize(true);
    }, 300);
}





requestAnimationFrame(() => {
    initMap();
});





