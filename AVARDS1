function sellStation(id){
    const st = stationsData[id];
    if(!st) return;

    if(st.owner != playerId){
        alert("Это чужая станция продать нельзя!");
        return;
    }

    const sellPrice = st.power * 2;
    playerCash += sellPrice;
    document.getElementById('cash-total').textContent = playerCash.toFixed(1);

    if(stationMarkers[id]){
        map.removeLayer(stationMarkers[id]);
        delete stationMarkers[id];
    }

    delete stationsData[id];

    myStationsCount--;
    document.getElementById('stations-count').textContent = myStationsCount;

    localStorage.setItem("playerCash", playerCash);

    alert(`Станция продана! Получено ${sellPrice.toFixed(1)} кэша`);
}
