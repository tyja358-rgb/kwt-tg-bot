# ======== Запуск ========
if __name__ == "__main__":
    # Flask в отдельном потоке
    def run_flask():
        app.run(host="0.0.0.0", port=5000, debug=False)  # use_reloader не включаем

    Thread(target=run_flask).start()

    print("Бот запущен...")
    updater.start_polling()
    updater.idle()
