<script>
const tg = window.Telegram.WebApp;
tg.expand();

// Разбиваем текст спонсоров на отдельные буквы
function splitLetters(id) {
    const el = document.getElementById(id);
    const text = el.innerText;
    el.innerHTML = "";
    for (let char of text) {
        const span = document.createElement("span");
        span.innerText = char;
        el.appendChild(span);
    }
}

splitLetters("sponsor1");
splitLetters("sponsor2");

// Показ заставки с плавной анимацией: 1 сек появления, 3 сек на экране, 1 сек исчезновения
setTimeout(() => {
    const splash = document.getElementById("splash");
    splash.style.animation = "fadeOut 1s forwards";
    setTimeout(() => {
        splash.style.display = "none";
        document.getElementById("main-content").style.display = "block";
    }, 1000);
}, 4000);

// Функции кнопок
function addPhoto() { tg.sendData(JSON.stringify({ action: "add_photo" })); }
function vote() { tg.sendData(JSON.stringify({ action: "vote" })); }
document.getElementById("addPhoto").onclick = addPhoto;
document.getElementById("vote").onclick = vote;
</script>

