    margin-left: 6px;
    padding: 10px 14px;
    border-radius: 8px;
    border: none;
    background: #4CAF50;
    color: white;
    font-weight: bold;
}
</style>
</head>
<body>

<h2>Aetherium AI ü§ñ</h2>
<div id="chat"></div>

<div id="inputBox">
<input id="text" placeholder="–ù–∞–ø–∏—à–∏ —Å–æ–æ–±—â–µ–Ω–∏–µ..." />
<button onclick="send()">‚ñ∂</button>
</div>

<script>
const chat = document.getElementById("chat");

function add(text, cls) {
    const d = document.createElement("div");
    d.className = "msg " + cls;
    d.innerText = text;
    chat.appendChild(d);
    chat.scrollTop = chat.scrollHeight;
}

async function send() {
    const input = document.getElementById("text");
    const text = input.value.trim();
    if (!text) return;

    add(text, "user");
    input.value = "";
    add("–î—É–º–∞—é...", "ai");

    try {
        const res = await fetch("/ask_ai", {
            method: "POST",
            headers: {"Content-Type": "application/json"},
            body: JSON.stringify({message: text})
        });
        const data = await res.json();
        chat.lastChild.innerText = data.reply;
    } catch (e) {
        chat.lastChild.innerText = "–û—à–∏–±–∫–∞ —Å–æ–µ–¥–∏–Ω–µ–Ω–∏—è";
    }
}

document.getElementById("text").addEventListener("keypress", e => {
    if (e.key === "Enter") send();
});
</script>

</body>
</html>
"""

# =========================
# AI endpoint (–ù–û–í–´–ô OpenAI)
# =========================
@app.route("/ask_ai", methods=["POST"])
def ask_ai():
    data = request.get_json()
    user_text = data.get("message", "")

    try:
        response = client.chat.completions.create(
            model="gpt-4o-mini",
            messages=[
                {"role": "system", "content": "–¢—ã –¥—Ä—É–∂–µ–ª—é–±–Ω—ã–π AI –ø–æ–º–æ—â–Ω–∏–∫ –ø—Ä–æ–µ–∫—Ç–∞ Aetherium."},
                {"role": "user", "content": user_text}
            ],
            temperature=0.7
        )

        reply = response.choices[0].message.content
        return jsonify({"reply": reply})

    except Exception as e:
        return jsonify({"reply": f"–û—à–∏–±–∫–∞ AI: {e}"}), 500


# =========================
# –õ–æ–∫–∞–ª—å–Ω—ã–π –∑–∞–ø—É—Å–∫ (–ù–ï PythonAnywhere)
# =========================
if __name__ == "__main__":
    app.run(debug=True, port=5001)
