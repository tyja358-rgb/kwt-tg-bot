import os
from flask import Flask, request, jsonify, render_template
import sqlite3
from datetime import date
app = Flask(__name__)
UPLOAD_FOLDER = '/home/Moldova2026/mysite/uploads'
ALLOWED_EXTENSIONS = {'png', 'jpg', 'jpeg', 'gif'}
app.config['UPLOAD_FOLDER'] = UPLOAD_FOLDER
# создаём папку uploads, если её вдруг нет
if not os.path.exists(UPLOAD_FOLDER):
    os.makedirs(UPLOAD_FOLDER)
def allowed_file(filename):
    return '.' in filename and filename.rsplit('.', 1)[1].lower() in ALLOWED_EXTENSIONS
import os
from werkzeug.utils import secure_filename
# Главная страница
@app.route('/')
def index():
    return render_template('index.html')  # 4 пробела
# Регистрация участника
@app.route('/register', methods=['POST'])
def register():
    data = request.json
    username = data.get('username')
    category = data.get('category')
    # Соединение с базой
    conn = sqlite3.connect('moldova_pet_awards.db')
    c = conn.cursor()
    c.execute(
        "INSERT INTO users (username, category, registration_date) VALUES (?, ?, ?)",
        (username, category, date.today())
    )
    conn.commit()
    conn.close()
    return jsonify({'status': 'ok', 'username': username, 'category': category})
import os
from werkzeug.utils import secure_filename
UPLOAD_FOLDER = 'uploads'
ALLOWED_EXTENSIONS = {'png', 'jpg', 'jpeg', 'gif'}
# создаем папку uploads, если нет
if not os.path.exists(UPLOAD_FOLDER):
    os.makedirs(UPLOAD_FOLDER)
app.config['UPLOAD_FOLDER'] = UPLOAD_FOLDER
def allowed_file(filename):
    return '.' in filename and filename.rsplit('.', 1)[1].lower() in ALLOWED_EXTENSIONS
# Endpoint для загрузки фото
@app.route('/upload', methods=['POST'])
def upload():
    if 'photo' not in request.files:
        return jsonify({'status': 'error', 'message': 'Файл не выбран'})
    file = request.files['photo']
    if file.filename == '':
        return jsonify({'status': 'error', 'message': 'Файл не выбран'})
    if file and allowed_file(file.filename):
        filename = secure_filename(file.filename)
        filepath = os.path.join(app.config['UPLOAD_FOLDER'], filename)
        file.save(filepath)
        # Сохраняем информацию о фото в базе
        category = request.form.get('category', 'Не указана')
        username = request.form.get('username', 'Аноним')
        conn = sqlite3.connect('moldova_pet_awards.db')
        c = conn.cursor()
        # Убедись, что таблица photos уже создана
        c.execute('''
            INSERT INTO photos (user_id, category, upload_date, likes)
            VALUES ((SELECT id FROM users WHERE username=? LIMIT 1), ?, ?, 0)
        ''', (username, category, date.today()))
        conn.commit()
        conn.close()
        return jsonify({'status': 'ok', 'filename': filename})
    else:
        return jsonify({'status': 'error', 'message': 'Недопустимый формат файла'})
import os
from flask import request
UPLOAD_FOLDER = 'static/uploads'
if not os.path.exists(UPLOAD_FOLDER):
    os.makedirs(UPLOAD_FOLDER)
@app.route('/upload', methods=['POST'])
def upload():
    file = request.files.get('photo')
    category = request.form.get('category')
    if not file or not category:
        return jsonify({'status': 'error', 'message': 'Нет файла или категории'})
    # Определяем id для фото
    conn = sqlite3.connect('moldova_pet_awards.db')
    c = conn.cursor()
    c.execute("INSERT INTO photos (user_id, category, upload_date) VALUES (?, ?, ?)", (0, category, date.today()))
    photo_id = c.lastrowid
    conn.commit()
    conn.close()
    # Сохраняем файл
    filename = f"{photo_id}.jpg"
    filepath = os.path.join(UPLOAD_FOLDER, filename)
    file.save(filepath)
    return jsonify({'status': 'ok', 'photo_id': photo_id})
# Запуск приложения
if __name__ == '__main__':
    app.run()
