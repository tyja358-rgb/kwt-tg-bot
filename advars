from flask import Flask, request, jsonify
from dotenv import load_dotenv
import os
import requests
from openai import OpenAI

# =========================
# –ó–∞–≥—Ä—É–∑–∫–∞ .env
# =========================
load_dotenv("/home/ArgoAetherium/Aetherium/.env")

TELEGRAM_TOKEN = os.getenv("TELEGRAM_BOT_TOKEN")
OPENAI_KEY = os.getenv("OPENAI_API_KEY")

BASE_URL = f"https://api.telegram.org/bot{TELEGRAM_TOKEN}"

# =========================
# OpenAI client (–ù–û–í–´–ô API)
# =========================
client = OpenAI(api_key=OPENAI_KEY)

# =========================
# Flask app
# =========================
app = Flask(__name__)

# =========================
# Root (–ø—Ä–æ–≤–µ—Ä–∫–∞)
# =========================
@app.route("/", methods=["GET"])
def index():
    return "Aetherium server is running ‚úÖ"

# =========================
# Telegram Mini App (WebApp)
# =========================
@app.route("/webapp", methods=["GET"])
def webapp():
    return """
<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<title>Aetherium AI Chat</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<style>
body {
    font-family: Arial;
    background: #f5f5f5;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin: 0;
    padding: 10px;
}
h2 { margin: 10px 0; }
#chat {
    width: 100%;
    max-width: 420px;
    height: 60vh;
    background: white;
    border-radius: 10px;
    padding: 10px;
    overflow-y: auto;
    box-shadow: 0 0 10px rgba(0,0,0,0.1);
}
.msg {
    margin: 6px 0;
    padding: 8px 12px;
    border-radius: 14px;
    max-width: 80%;
}
.user { background: #d1e7ff; align-self: flex-end; }
.ai { background: #e2ffe2; align-self: flex-start; }
#inputBox {
    width: 100%;
    max-width: 420px;
    display: flex;
    margin-top: 10px;
}
