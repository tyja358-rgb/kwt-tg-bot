function generatePoints() {
    points = [];
    const TOTAL_POINTS = 50;
    const COLORS = ['#00ff99', '#ffd700', '#ff5555', '#00aaff', '#cc66ff'];

    for (let i = 0; i < TOTAL_POINTS; i++) {
        const distMeters = Math.random() * 1000 + 50; // Ñ€Ð°ÑÑÑ‚Ð¾ÑÐ½Ð¸Ðµ Ð´Ð¾ Ñ‚Ð¾Ñ‡ÐºÐ¸ Ð² Ð¼ÐµÑ‚Ñ€Ð°Ñ…
        const distDeg = distMeters / 111320; // Ð¿Ñ€ÐµÐ¾Ð±Ñ€Ð°Ð·ÑƒÐµÐ¼ Ð² Ð³Ñ€Ð°Ð´ÑƒÑÑ‹
        const angle = Math.random() * Math.PI * 2; // ÑÐ»ÑƒÑ‡Ð°Ð¹Ð½Ñ‹Ð¹ ÑƒÐ³Ð¾Ð»
        const lat = baseLat + distDeg * Math.cos(angle);
        const lng = baseLng + distDeg * Math.sin(angle);

        // ÑÐ¾Ð·Ð´Ð°ÐµÐ¼ Ð¼Ð°Ñ€ÐºÐµÑ€
        const marker = L.circleMarker([lat, lng], {
            radius: 6,
            color: COLORS[i % COLORS.length],
            fillOpacity: 0.9
        }).addTo(map);

        const point = {
            lat,
            lng,
            marker,
            collected: false,
            adsViewed: 0
        };

        // Ñ€Ð°ÑÑ‡ÐµÑ‚ Ð¼Ð¾Ñ‰Ð½Ð¾ÑÑ‚Ð¸ Ð¸ Ñ€ÐµÐºÐ»Ð°Ð¼Ñ‹
        point.power = calculatePower(distMeters);
        point.adsRequired = calculateAds(distMeters);

        // ðŸ”¥ Ð›Ð¾Ð³ Ð´Ð»Ñ Ð¿Ñ€Ð¾Ð²ÐµÑ€ÐºÐ¸
        console.log(`Ð¢Ð¾Ñ‡ÐºÐ° ${i + 1}: Ð´Ð¸ÑÑ‚Ð°Ð½Ñ†Ð¸Ñ = ${distMeters.toFixed(1)} Ð¼, Ñ€ÐµÐºÐ»Ð°Ð¼Ñ‹ = ${point.adsRequired}, Ð¼Ð¾Ñ‰Ð½Ð¾ÑÑ‚ÑŒ = ${point.power.toFixed(1)}`);

        points.push(point);

        // ÐºÐ»Ð¸Ðº Ð¿Ð¾ Ñ‚Ð¾Ñ‡ÐºÐµ
        marker.on('click', () => openPointModal(point));
    }
}
